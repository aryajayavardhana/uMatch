<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih1"
    android:orientation="vertical"
    tools:context=".shop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/gambarprofile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="135dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:src="@drawable/coin1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/made_tommy_regular"
            android:textColor="@color/tulisan"
            android:text="Ingin menjadi bagian dari VIP group pada uMatch? Dengan melakukan one time purchase ini anda dapat masuk kedalam golongan orang keren! \n\n Beberapa benefitnya adalah: " />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/rbQ1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/tombol_bulet"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/made_tommy_regular"
                android:textColor="#2F3353"
                android:button="@android:color/transparent"
                android:clickable="true"
                android:maxLines="5"
                android:singleLine="false"
                android:text="      VIP Package &#10;         Benefits: &#10;            1. Unlimited Likes&#10;            2. VIP Badge &#10;            3. Prestige" />

        </RadioGroup>


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/dogs" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="14dp"
            android:gravity="center"
            android:fontFamily="@font/made_tommy_regular"
            android:textColor="@color/tulisan"
            android:text="Tertarik?" />

        <Button
            android:id="@+id/btnPurchase"
            android:layout_width="800px"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/tulisan"
            android:minHeight="48dp"
            android:text="Purchase "
            android:textColor="@color/putih"
            app:shapeAppearanceOverlay="@style/buttomShape" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/made_tommy_regular"
            android:gravity="center"
            android:text="Tidak Sekarang"
            android:textColor="@color/tulisan"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="710px"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="#8D8D8D"
            android:minHeight="48dp"
            android:text="Back"
            android:textColor="@color/putih"
            app:shapeAppearanceOverlay="@style/buttomShape" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>